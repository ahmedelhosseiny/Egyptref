Bootstrap: docker
From: ubuntu:latest

%environment
    SINGULARITYENV_PREPEND_PATH=/opt/vep/src/ensembl-vep/
    CACHE=/opt/vep/.vep
    export REF SINGULARITYENV_PREPEND_PATH

%runscript
exec echo "Try running with --app dog/cat"

%apprun dog
exec echo vep --fasta "$1" --offline "$2"

%apphelp dog
